generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cobaye {
  ID                           Int                @id @default(autoincrement())
  Nom                          String
  Prenom                       String
  Date_de_naissance            DateTime
  Sexe                         String
  Resultats_tests_ophtalmiques Json
  Port_de_lentilles            SessionLentilles[]
}

model SessionLentilles {
  ID                   Int      @id @default(autoincrement())
  ID_Cobaye            Int
  Date_heure_de_debut  DateTime
  Duree_totale_de_port Int
  Pauses               Int[]
  cobaye               Cobaye   @relation(fields: [ID_Cobaye], references: [ID])

  @@index([ID_Cobaye], name: "idx_lentilles_cobaye")
}
