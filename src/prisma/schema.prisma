generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cobaye {
  id                           String             @id @default(auto()) @map("_id") @db.ObjectId
  nom                          String
  prenom                       String
  date_de_naissance            DateTime
  sexe                         String
  resultats_tests_ophtalmiques Json
  port_de_lentilles            SessionLentilles[]
}

model SessionLentilles {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  cobaye_id            String   @db.ObjectId
  date_heure_de_debut  DateTime
  duree_totale_de_port Int
  pauses               Int[]
  cobaye               Cobaye   @relation(fields: [cobaye_id], references: [id])

  @@index([cobaye_id], name: "idx_lentilles_cobaye")
}
